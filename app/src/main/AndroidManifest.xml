<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yw.action">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IpcActivity" />
        <activity android:name=".SharedPreferencesActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GetLeftActivity" />
        <activity android:name=".WindowActivity" />
        <activity android:name=".glide.GlideActivity" />
        <activity android:name=".rxjava.RxJavaActivity" />
        <activity android:name=".NetChangeActivity" />
        <!--
        <receiver android:name=".broadcastReceiver.MyBroadcastReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        -->
        <service
            android:name=".broadcastReceiver.MyNetChangeService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE.textservice" />
            </intent-filter>
        </service>

        <activity android:name=".rxjava.rxbus.RxBusActivity"></activity>
    </application>

</manifest>