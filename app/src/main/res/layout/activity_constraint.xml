  <!--
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintHorizontal_chainStyle="spread"  spread: 默认 packed: 集中  spread_inside:


 -->
  <TextView
      android:id="@+id/bt_01"
      android:text="my name bt1"
      android:background="@color/colorAccent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/bt_02"
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintHorizontal_chainStyle="packed"
      android:layout_width="30dp"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/bt_02"
      android:text="my name bt2"
      android:background="@color/colorPrimary"
      app:layout_constraintLeft_toRightOf="@+id/bt_01"
      app:layout_constraintRight_toLeftOf="@+id/bt_03"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintHorizontal_chainStyle="spread"
      android:layout_width="30dp"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/bt_03"
      android:text="my name bt3"
      android:background="@color/colorAccent"
      app:layout_constraintLeft_toRightOf="@+id/bt_02"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintHorizontal_chainStyle="spread"
      android:layout_width="30dp"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/tv_bottom"
      android:text="my is bottom"
      android:background="@color/colorAccent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintVertical_bias="0.9"
      android:layout_width="30dp"
      android:layout_height="30dp" />


  <!-- Guideline -->
  <android.support.constraint.Guideline
      android:id="@+id/guideline_h"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.8" />

  <android.support.constraint.Guideline
      android:id="@+id/guideline_w"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.2" />

  <TextView
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="#612"
      app:layout_constraintLeft_toRightOf="@id/guideline_w"
      app:layout_constraintTop_toBottomOf="@id/guideline_h" />

  <TextView
      android:id="@+id/tv_bottom_left"
      android:text="my is bottom"
      android:background="@color/colorAccent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintVertical_bias="0.9"
      android:layout_width="30dp"
      android:layout_height="30dp" />

</android.support.constraint.ConstraintLayout>
